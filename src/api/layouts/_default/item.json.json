{
  "title": "{{ .Title }}",
  "slug": "{{ .Params.slug }}",
  "permalink": "{{ .RelPermalink }}",
  "type": "{{ .Type }}",
  {{ with  .OutputFormats.Get "json" -}}
  "datapermalink": "{{ .Permalink }}",
  {{ end }}
  "body": {{ trim ( .Content | jsonify | safeJS ) "\n" }},
  "tags": [
    {{ range $index, $taxonomy := .Params.tags }}
    {{ if $index }}, {{ end }}"{{ $taxonomy }}"
    {{ end }}
  ]
}